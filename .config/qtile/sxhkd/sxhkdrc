#################################################################
# SUPER + FUNCTION KEYS
#################################################################

# Vivaldi
super + F1
	google-chrome-stable -no-default-browser-check

# Emacs
super + F2
	emacs

# Chat
super + F3
    Teams

# Database Client
super + F4
    dbeaver

# Rest Client
super + F5
    insomnia

# Vlc
super + F6
    vlc --video-on-top

# Virtualbox
super + F7
    virtualbox

# File Manager
super + F8
    nautilus

# Email Client
super + F9
    evolution

# Music / DJ
super + F10
    spotify

#Rofi Fullscreen
super + F11
    rofi -theme-str 'window \{width: 100%;height: 100%;\}' -show drun

#Rofi
super + F12
    rofi -show drun

#################################################################
# SUPER + ... KEYS
#################################################################

# Emacs
super + e
    emacsclient -c -a ''

#Pragha
super + m
    pragha

#alacritty
super + Return
    alacritty

#Xkill
super + Escape
    xkill

#################################################################
# SUPER + SHIFT KEYS
#################################################################

#File-Manager
super + shift + Return
	nautilus

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

super + shift + e
	~/.config/rofi/power-menu.sh
	
