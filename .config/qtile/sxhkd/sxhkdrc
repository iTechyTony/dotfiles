#################################################################
#VARIETY KEYS
#################################################################
# Wallpaper next
super + alt + j
    variety -n

# Wallpaper previous
super + alt + k
    variety -p

# Wallpaper previous
super + alt + Left
    variety -p

# Wallpaper next
super + alt + Right
    variety -n

# Wallpaper toggle-pause
super + alt + Up
    variety --toggle-pause

# Wallpaper resume
super + alt + Down
    variety --resume

